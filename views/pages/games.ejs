<%- include('../partials/head') %>
<%- include('../partials/header') %>


<form action="http://localhost:3000/games/add" method="post">
    Name: <input type="text" name="name" />
    Duration: <input type="text" name="duration" />
    Team Size: <input type="text" name="team_size" />
    <button type="submit" class="btn btn-primary btn-sm">Add Game</button>
</form> 


<div class="container">
    <div class="row">
    <h1>Games</h1>
    <% gamesArray.forEach((game)=> { %>
        <div class="col-4">
            <div class="card">
                <div class="card shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                            <h5 class="card-title"><%= game.name %></h5>
                            <h6 Duration :<%= game.duration %></h6>
                              Duration :<%= game.duration %>
                            <h6 Team Size :<%= game.team_size %></h6>
                              Team Size :<%= game.team_size%>
                            
                    <div class="card-body">
                      <a href="/games/<%= game.game_id %>">
                        <button type="submit" class="btn btn-primary btn-sm">Edit Game</button>
                      </a>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>   
    </div>
</div>

